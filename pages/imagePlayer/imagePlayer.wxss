.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: black;
  }
  
  .image {
    flex: 1;
    width: 100%;
    height: 100%;
  }
  
  .footer {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.8);
    padding: 10px;
  }
  
  .footer-button {
    color: white;
    background-color: #007aff;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    font-size: 16px;
    margin: 0 2px; /* 在按钮之间添加间隙 */
  }
  