<view class="container">
  <image src="{{currentImage}}" mode="aspectFit" class="image"></image>
  <view wx:if="{{showInfo}}" class="current-path">
        {{displayPath}}
  </view>
  <view class="footer">
    <button class="footer-button" bindtap="prevImage">上一张</button>
    <button class="footer-button" bindtap="nextImage">下一张</button>
    <button bindtap="saveImage" class="footer-button">保存</button>
    <!-- 显示当前路径 -->
    <button bindtap="toggleInfo" class="footer-button">信息</button>
    <button class="footer-button" bindtap="goBack">返回</button>
  </view>

</view>
