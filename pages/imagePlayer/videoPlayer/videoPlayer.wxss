/* 视频容器样式 */
.video-container {
    display: flex;
    justify-content: center;  /* 水平居中 */
    align-items: center;      /* 垂直居中 */
    height: 100vh;            /* 使容器高度占满屏幕 */
    background-color: black;  /* 可选: 背景色为黑色 */
  }
  
  /* 视频播放器样式 */
  .video-player {
    width: 100%;              /* 视频横向占满 */
    max-width: 100%;          /* 限制最大宽度不超过容器 */
    max-height: 80%;          /* 限制最大高度为 80% 以确保视频不会超出容器的高度 */
    object-fit: contain;      /* 保持视频的长宽比 */
  }
  